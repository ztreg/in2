<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/header %>
    <% include ./partials/snow %>
  </head>
  <body> 
    <div class="container centerering">
        <form action="/restaurants" method="GET">
            <button type="submit" class="btn btn-info">Back to list</button>
          </form>  
      <div class="row centerering">
            <% for(let i = 0; i < reviews.length; i++) { %>
                <div class="card niceColors">
                    <div class="card-body">
                        <h3 class="card-text">Author : <%= reviews[i].userName %></h3>
                        <h4 class="card-title">Raiting: <%= reviews[i].reviewRaiting %></h4>
                        <p class="card-text">Comment: <%= reviews[i].reviewText %> </p>
                      
               <form action="/deleteReview/<%= reviews[i].review_ID %>" method="POST">
                <button type="submit" class="btn btn-danger">Delete review</button>
               </form>
                </div>
                </div>   
              <%  } %>
       
  </body>
</html>